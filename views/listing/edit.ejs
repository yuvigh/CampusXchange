<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    
    <h3>Edit</h3>
    <form method="POST" action="/Item/<%=Item1._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="Item[title]" value="<%=Item1.title%>" class="form-control" required>
            <div class="invalid-feedback">Please Enter Title</div>
            <div class="valid-feedback">Title Looks Good!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" name="Item[description]" value="<%=Item1.description%>" class="form-control" required>
            <div class="invalid-feedback">Please Enter a Short Description</div>
        </div>
       
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="Item[image]" value="<%=Item1.image%>" class="form-control" required>

        </div>
        <div class="row">
       <div class="col-4">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="Item[price]" value="<%=Item1.price%>" class="form-control" required>
        <div class="invalid-feedback">Please Enter Valid Price</div>
       </div>
        
      <div class="col-8">
        <label for="location" class="form-label">Location</label>
        <input type="text" name="Item[location]" value="<%=Item1.location%>" class="form-control" required>
        <div class="invalid-feedback">Please Enter Valid Location Name</div>
      </div>
    </div>
        <br><br>
        <button class="btn btn-dark add-btn mt-3">Edit</button>
    </form>
</div>
</div>
</body>
</html>