<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-3 mt-3">

    <h3>Item Details</h3>
</div>
    <div class="card col-5 offset-3 show-card">
        <img src="<%=Item1.image%>" class="card-img-top show-img" alt="Item_image">
     <div class="card-body">
       <p class="card-text">
        <b><%=Item1.title %></b><br>
        <%= Item1.description%><br>
        &#8377;<%=Item1.price.toLocaleString("en-IN")%><br>
        <%=Item1.location%><br>
       </p>
    </div>
</div>
    <br>
<%if(currUser && currUser._id.equals(Item1.owner._id)){%>
    <div class="btns mt-4">
    <a href="/Item/<%=Item1._id%>/edit" class="btn btn-dark  col-1 offset-3">Edit</a>
    
    <form method="POST" action="/Item/<%=Item1._id%>?_method=DELETE">
        <button class="btn btn-dark  offset-5">Delete</button>
    </form>
    <%} else{%>
        <form action="/Item/<%=Item1._id%>/buy" method="GET">
            <div class="btns mt-2">
                <button class="btn btn-success offset-3">Buy</button>
            </div>
           
        </form>
       
        <%}%>
</div>
</div>

